{
  "name": "vscode-nes",
  "displayName": "红白机",
  "publisher": "taiyuuki",
  "version": "0.3.0",
  "description": "红白机模拟器，支持手柄、存档、金手指。",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/taiyuuki/vscode-nes"
  },
  "bugs": "https://github.com/taiyuuki/vscode-nes/issues",
  "homepage": "https://github.com/taiyuuki/vscode-nes#readme",
  "icon": "res/icon.png",
  "keywords": [
    "NES",
    "红白机",
    "小霸王",
    "模拟器",
    "Emulator"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodeNes.add",
    "onCommand:vscodeNes.remove",
    "onView:remoteROM",
    "onView:localROM"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscodeNes.add",
        "title": "添加本地ROM",
        "icon": "$(new-file)"
      },
      {
        "command": "vscodeNes.remove",
        "title": "删除",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-nes",
          "title": "红白机模拟器",
          "icon": "res/gamepad.svg"
        }
      ]
    },
    "views": {
      "vscode-nes": [
        {
          "id": "remoteROM",
          "name": "远程ROM"
        },
        {
          "id": "localROM",
          "name": "本地ROM"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscodeNes.add",
          "when": "view == localROM",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscodeNes.remove",
          "when": "view == localROM"
        },
        {
          "command": "vscodeNes.remove",
          "when": "view == localROM",
          "group": "inline",
          "title": "删除ROM",
          "icon": "$(trash)"
        }
      ]
    },
    "configuration": {
      "title": "红白机模拟器",
      "properties": {
        "vscodeNes.controller": {
          "type": "object",
          "description": "游戏控制器",
          "default": {
            "p1": {
              "UP": "KeyW",
              "DOWN": "KeyS",
              "LEFT": "KeyA",
              "RIGHT": "KeyD",
              "START": "Digit1",
              "SELECT": "Digit2",
              "B": "KeyJ",
              "A": "KeyK",
              "D": "KeyU",
              "C": "KeyI"
            },
            "p2": {
              "UP": "ArrowUp",
              "DOWN": "ArrowDown",
              "LEFT": "ArrowLeft",
              "RIGHT": "ArrowRight",
              "B": "Numpad1",
              "A": "Numpad2",
              "D": "Numpad4",
              "C": "Numpad5"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts ./",
    "dev": "tsup --watch",
    "build": "tsup",
    "bump:patch": "bump patch",
    "package": "pnpx vsce package --no-dependencies",
    "publish": "vsce publish",
    "test": "vitest"
  },
  "author": "taiyuuki <taiyuuki@qq.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@taiyuuki/eslint-config": "^1.4.15",
    "@types/node": "^22.9.0",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.14.0",
    "tsup": "^8.3.5"
  }
}