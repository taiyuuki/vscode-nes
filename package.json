{
  "name": "vscode-nes",
  "displayName": "红白机",
  "publisher": "taiyuuki",
  "version": "0.1.0",
  "description": "红白机模拟器，支持手柄，支持保存、读取。",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/taiyuuki/vscode-nes"
  },
  "bugs": "https://github.com/taiyuuki/vscode-nes/issues",
  "homepage": "https://github.com/taiyuuki/vscode-nes#readme",
  "icon": "res/icon.png",
  "keywords": [
    "NES",
    "红白机",
    "小霸王",
    "模拟器",
    "Emulator"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodeNes.add",
    "onCommand:vscodeNes.remove",
    "onView:remoteROM",
    "onView:localROM"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscodeNes.add",
        "title": "添加本地ROM",
        "icon": "$(new-file)"
      },
      {
        "command": "vscodeNes.remove",
        "title": "删除",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-nes",
          "title": "红白机模拟器",
          "icon": "res/gamepad.svg"
        }
      ]
    },
    "views": {
      "vscode-nes": [
        {
          "id": "remoteROM",
          "name": "远程ROM"
        },
        {
          "id": "localROM",
          "name": "本地ROM"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscodeNes.add",
          "when": "view == localROM",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscodeNes.remove",
          "when": "view == localROM"
        },
        {
          "command": "vscodeNes.remove",
          "when": "view == localROM",
          "group": "inline",
          "title": "删除ROM",
          "icon": "$(trash)"
        }
      ]
    },
    "configuration": {
      "title": "红白机模拟器",
      "properties": {
        "vscodeNes.romPath": {
          "type": "array",
          "default": [
            [
