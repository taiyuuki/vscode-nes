  },
  "scripts": {
    "lint": "eslint --ext .js,.ts ./",
    "dev": "tsup --watch",
    "build": "tsup",
    "bump:patch": "bump patch",
    "package": "npx vsce package --no-dependencies",
    "publish": "vsce publish",
    "test": "vitest"
  },
  "author": "taiyuuki <taiyuuki@qq.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
